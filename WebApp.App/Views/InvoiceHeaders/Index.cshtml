@model InvoiceHeaderViewModel

@{
    ViewData["Title"] = "Index";
}

<section class="d-flex justify-content-between">
    <h2>Invoice Headers</h2>
    <div>
        <a asp-action="Add" class="btn btn-outline-primary">Add</a>
    </div>
</section>
<hr />
<section>
    <table class="table table-striped table-bordered">
        <thead>
            <tr class="table-secondary">
                <th>Customer Name</th>
                <th>Invoice Date</th>
                <th>Cashier Name</th>
                <th>Branch Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var InvoiceHeader in Model.InvoiceHeaders)
            {
                <tr>
                    <td>@InvoiceHeader.CustomerName</td>
                    <td>@InvoiceHeader.Invoicedate</td>
                    <td>@InvoiceHeader.Cashier.CashierName</td>
                    <td>@InvoiceHeader.Branch.BranchName</td>
                    <td class="text-center">
                        <a asp-action="Details" asp-route-id="@InvoiceHeader.Id" class="btn btn-info me-2">Details</a>
                        <a asp-action="Update" asp-route-id="@InvoiceHeader.Id" class="btn btn-success me-2">Edit</a>
                        <a asp-action="delete" asp-route-id="@InvoiceHeader.Id" onclick="confirmDelete()" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>

@section Scripts {
    <script>
        function confirmDelete() {
            var decision = confirm("are you sure");
            if (decision == false) {
                event.preventDefault();
            }
        }
    </script>
}