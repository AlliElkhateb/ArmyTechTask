@model BranchViewModel

@{
    ViewData["Title"] = "Index";
}

<section class="d-flex justify-content-between">
    <h2>Branches</h2>
    <div>
        <a asp-action="Add" class="btn btn-outline-primary">Add</a>
    </div>
</section>
<hr />
<section>
    <table class="table table-striped table-bordered">
        <thead>
            <tr class="table-secondary">
                <th>Branch Name</th>
                <th>City Name</th>
                <th width="200px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var branch in Model.Branches)
            {
                <tr>
                    <td>@branch.BranchName</td>
                    <td>@branch.City.CityName</td>
                    <td class="text-center d-flex justify-content-around">
                        <a asp-action="Update" asp-route-id="@branch.Id" class="btn btn-success">Edit</a>
                        <a asp-action="delete" asp-route-id="@branch.Id" onclick="confirmDelete()" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>

@section Scripts {
    <script>
        function confirmDelete() {
            var decision = confirm("are you sure");
            if (decision == false) {
                event.preventDefault();
            }
        }
    </script>
}
