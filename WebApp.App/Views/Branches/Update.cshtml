@model BranchViewModel

@{
    ViewData["Title"] = "Edit Branch";
}

<h1>Edit Branch</h1>
<hr />
<form asp-action="update">
    <input hidden asp-for="Branch.Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3 row">
        <label asp-for="Branch.BranchName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Branch.BranchName" class="form-control" />
            <span asp-validation-for="Branch.BranchName" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <label asp-for="Branch.CityId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select class="form-select" asp-for="Branch.CityId" asp-items="@Model.ListItems">
                <option>--Select City Name--</option>
            </select>
            <span asp-validation-for="Branch.CityId" class="text-danger"></span>
        </div>
    </div>
    <div class="mt-5">
        <input type="submit" class="btn btn-primary" />
        <a asp-action="index" class="btn btn-dark">Back</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
